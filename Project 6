void WriteToFile(array[][]) {

    string fileName = "Hotplate.csv";
    ofstream outSS;
    outSS.open(fileName);

    int i,j;

    cout << fixed << setprecision(SET_PRECSION_CONSTANT);
    for (i = 0; i < SIZE_CONSTANT; i++) {
        for (j = 0; j < SIZE_CONSTANT; j++) {
            outSS << setw(SET_WIDTH_CONSTANT) << array[i][j];
        }
        outSS << endl;
    }
    
    outSS.close();

}
